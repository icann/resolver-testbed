[Unit]
Description={{ service_name }} service
After=syslog.target network-online.target

[Service]
Type=forking
PIDFile={{ software_target_dir }}/etc/unbound/unbound.pid
ExecStart={{ software_target_dir }}/sbin/unbound -c {{ software_target_dir }}/etc/unbound/unbound.conf
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -TERM $MAINPID

[Install]
WantedBy=multi-user.target
